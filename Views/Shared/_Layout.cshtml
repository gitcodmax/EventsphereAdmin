<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EventSphereApp</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EventSphereApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white mb-3">
            <div class="container-fluid">

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-center align-items-center gap-3">

                        <li class="nav-item">
                            <a class="dashboard-link nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Admin Dashboard</a>
                        </li>

                        <li class="nav-item">
                            <a asp-area="" asp-controller="Home" asp-action="Index">
                                <img src="~/images/Logo.png" height="100"/>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="dashboard-link nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Users">Users</a>
                        </li>

                        <li class="nav-item">
                            <a class="dashboard-link nav-link text-dark" asp-area="" asp-controller="Events" asp-action="Events">Events</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="footer-logo">
                <img src="~/images/Logo.png" height="100" />
        </div>

        <div class="app-name">
            <p>Enter the Sphere of amazing Events!!<br />
            &copy; 2025 - EventSphereApp</p>
        </div>

        <div class="footer-links">
            <a class="text-dark" style="text-decoration: none;" asp-area="" asp-controller="Users" asp-action="Users">Users</a>
            <a class="text-dark" style="text-decoration: none; margin-left: 10px;" asp-area="" asp-controller="Home" asp-action="Events">Events</a>
            <a class="text-dark" style="text-decoration: none; margin-left: 10px;" asp-area="" asp-controller="Home" asp-action="TermsandPolicy">Terms and Policy</a>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
